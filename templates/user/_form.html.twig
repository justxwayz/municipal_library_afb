{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/user_form.css') }}">
{% endblock %}

{% block body %}
    <div class="form-page">
        <div class="form-container">
            {{ form_start(form) }}

            <div class="form-group">
                {{ form_label(form.email, 'Adresse e-mail') }}
                {{ form_widget(form.email) }}
                {{ form_errors(form.email) }}
            </div>

            <div class="form-group">
                {{ form_label(form.password, 'Mot de passe') }}
                {{ form_widget(form.password) }}
                {{ form_errors(form.password) }}
            </div>

            <div class="form-group">
                {{ form_label(form.roles, 'Rôle(s)') }}
                {{ form_widget(form.roles) }}
                {{ form_errors(form.roles) }}
            </div>

            <div class="form-group">
                {{ form_label(form.lastName, 'Nom') }}
                {{ form_widget(form.lastName) }}
                {{ form_errors(form.lastName) }}
            </div>

            <div class="form-group">
                {{ form_label(form.firstName, 'Prénom') }}
                {{ form_widget(form.firstName) }}
                {{ form_errors(form.firstName) }}
            </div>

            <div class="form-group">
                {{ form_label(form.address, 'Adresse') }}
                {{ form_widget(form.address) }}
                {{ form_errors(form.address) }}
            </div>

            <div class="form-group">
                {{ form_label(form.zipCode, 'Code postal') }}
                {{ form_widget(form.zipCode) }}
                {{ form_errors(form.zipCode) }}
            </div>

            <div class="form-group">
                {{ form_label(form.birthDate, 'Date de naissance') }}
                {{ form_widget(form.birthDate) }}
                {{ form_errors(form.birthDate) }}
            </div>

            <div class="form-actions">
                <button type="submit">Save</button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
